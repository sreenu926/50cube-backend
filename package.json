{
  "name": "50cube-backend",
  "version": "1.0.0",
  "description": "50cube Tech Assessment Backend - MERN Stack API",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "vercel-build": "echo 'No build needed for serverless'",
    "test": "jest",
    "lint": "eslint **/*.ts",
    "clean": "rm -rf dist",
    "snapshot": "node -e \"require('./services/snapshotJob').snapshotJobService.triggerManualSnapshot()\""
  },
  "keywords": [
    "50cube",
    "mern",
    "typescript",
    "express",
    "mongodb",
    "leagues",
    "leaderboard",
    "assessment"
  ],
  "author": "50cube Assessment",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
